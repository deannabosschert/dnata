<style>
:root {
	--dnataBlue: 0, 136, 203;
	--dnataGreen: 105, 190, 40;
}

* {
	margin: 0;
	padding: 0;
}

#logo,
#progress {
	position: fixed;
	z-index: 999;
}

#logo {
	width: 8rem;
	height: 8rem;
	background: rgb(var(--dnataBlue));
	top: 0;
	left: 2rem;
	display: inline-flex;
	justify-content: center;
	align-items: center;
	flex-wrap: wrap;
} #logo #percentage {
	flex-basis: 100%;
	text-align: center;
	color: white;
} #percentage::after {
	display: inline-block;
	content: "%";
	opacity: .5;
} #logo>img {
	width: 75%;
	filter: brightness(0) invert(1);
}

footer {
	position: absolute;
}

nav {
	perspective: 100px;
	perspective-origin: center 30%;
	position: fixed;
	padding: 2rem;
	bottom: 0;
	width: 100%;
	display: flex;
	justify-content: center;
	overflow: hidden;
}

nav>a {
	padding: 2rem;
	box-shadow: 0 .2rem .5rem .1rem rgba(0, 0, 0, .2);
	display: inline-block;
	background: #F9F9F9;
	border-radius: 50%;
	transform: rotateX(45deg) translateY(7rem) scale(0);
	transition: all .2s ease-out;
}

nav:focus-within>a,
nav>a.introduce,
nav>a.show {
	transform: rotateX(0) translateY(0) scale(1);
}

nav>a:not([disabled]):focus,
nav>a:not([disabled]):hover {
	animation: bubble .2s ease-out;
}

@keyframes bubble {
	40% {
		transform: scale(1.2);
	}
	80% {
		transform: scale(.9);
	}
}

nav>a+a {
	margin-left: 1.5rem;
}

#prev {
	background: rgb(var(--dnataBlue)) url("/slide/prev.png") no-repeat center center;
	background-size: 33%;
}

#next {
	background: rgb(var(--dnataBlue)) url("/slide/next.png") no-repeat center center;
	background-size: 33%;
}

#stop {
	background: rgb(var(--dnataBlue)) url("/slide/stop.png") no-repeat center center;
	background-size: 33%;
}

[disabled] {
	opacity: .25;
	pointer-events: none;
	cursor: not-allowed;
}

#notification {
	position: absolute;
	width: 50vw;
	height: 25vh;
	top: calc(50vh - 12.5vh);
	left: calc(50vw - 25vw);
	background: rgba(255, 255, 255, .9);
	box-shadow: 0 .1rem .5rem 0 rgba(0, 0, 0, .25);
	padding: 1rem;
	z-index: 999;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-wrap: wrap;
}

#notification>h1,
#notification>a {
	flex-basis: 100%;
	text-align: center;
}

#notification>button {
	background: rgb(var(--dnataBlue));
	border: none;
	padding: .5rem 1rem;
	color: white;
	font-size: 1.25rem;
	border-radius: .25rem;
	cursor: pointer;
}

#notification>a {
	color: rgba(0, 0, 0, .33);
	text-decoration: underline;
	cursor: pointer;
}

#notification~* {
	filter: blur(4px);
}

@font-face {
	font-family: "Aller";
	src: url("/slide/aller.ttf");
}

body {
	font-family: "Aller";
}

.dnata-title {
	font-size: 3rem;
	margin-bottom: 1rem;
	color: rgb(var(--dnataBlue));
}

.dnata-subtitle {
	font-size: 1.5rem;
	color: black;
}

.dnata-paragraph {
	font-size: 1rem;
	color: black;
}
</style>